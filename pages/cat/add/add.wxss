.head{
  padding-top: 30rpx;
  width: 100%;
  height: 370rpx;
  padding-left: 50rpx;
  background-color: #F0EFF4;
}
.img{
  margin-top: 20rpx;
  padding-top: 25rpx;
  height: 245rpx;
  display: flex;
  align-content: space-around
}
.add{
  width: 220rpx;
  height: 220rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #DCDCDC;
  border: 2rpx solid #DCDCDC;
  background-color: white;
  float: left
}
.img image{
  margin-left: 50rpx;
  margin-top: 2rpx;
  width: 220rpx;
  height: 220rpx;
  float: left;
  overflow: hidden
}
.content{
  padding: 0 50rpx;
  width: 650rpx;
  height: 500rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around
}
.item{
  padding: 20rpx 0;
  display: flex;
  justify-content: space-between;
  border-bottom: 2rpx solid #DCDCDC;
  font-size: 32rpx;
}
.input{
  width: 520rpx;
}
.input1{
  height: 200rpx;
}
.item1{
  border: 0
}
.item2{
  line-height: 50rpx
}
.submit{
  height: 464rpx;
  background-color: #F0EFF4;
  padding: 0 50rpx;
}
.btn{
  border: 0;
  margin-top: 20rpx;
  color: white;
  background-color: #CD9057;
}